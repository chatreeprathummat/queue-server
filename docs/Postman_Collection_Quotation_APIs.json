{
  "info": {
    "name": "Quotation Management APIs",
    "description": "API collection สำหรับทดสอบระบบจัดการใบเสนอราคา",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5009",
      "type": "string"
    },
    {
      "key": "api_base",
      "value": "{{base_url}}/api/inv",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Suppliers",
      "item": [
        {
          "name": "Get All Suppliers",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_base}}/suppliers",
              "host": ["{{api_base}}"],
              "path": ["suppliers"]
            }
          }
        },
        {
          "name": "Get Official Suppliers",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_base}}/suppliers?supplier_type=OFFICIAL",
              "host": ["{{api_base}}"],
              "path": ["suppliers"],
              "query": [
                {
                  "key": "supplier_type",
                  "value": "OFFICIAL"
                }
              ]
            }
          }
        },
        {
          "name": "Get Active Suppliers",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_base}}/suppliers?is_active=1",
              "host": ["{{api_base}}"],
              "path": ["suppliers"],
              "query": [
                {
                  "key": "is_active",
                  "value": "1"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Quotations",
      "item": [
        {
          "name": "Get All Quotations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_base}}/quotations",
              "host": ["{{api_base}}"],
              "path": ["quotations"]
            }
          }
        },
        {
          "name": "Get Quotations with Pagination",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_base}}/quotations?page=1&limit=5",
              "host": ["{{api_base}}"],
              "path": ["quotations"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "5"
                }
              ]
            }
          }
        },
        {
          "name": "Get Quotations by Supplier",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_base}}/quotations?supplier_id=1",
              "host": ["{{api_base}}"],
              "path": ["quotations"],
              "query": [
                {
                  "key": "supplier_id",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Get Active Quotations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_base}}/quotations?status=ACTIVE",
              "host": ["{{api_base}}"],
              "path": ["quotations"],
              "query": [
                {
                  "key": "status",
                  "value": "ACTIVE"
                }
              ]
            }
          }
        },
        {
          "name": "Get Quotation by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_base}}/quotation/1",
              "host": ["{{api_base}}"],
              "path": ["quotation", "1"]
            }
          }
        },
        {
          "name": "Create New Quotation",
          "request": {
            "method": "POST",
