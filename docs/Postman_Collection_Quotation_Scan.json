              "raw": "{{baseUrl}}/quotations?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["quotations"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
