  "item": [
    {
      "name": "Suppliers",
      "item": [
        {
          "name": "Get All Suppliers",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/suppliers",
              "host": ["{{baseUrl}}"],
              "path": ["suppliers"]
            }
          }
        },
        {
          "name": "Get Active Suppliers",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/suppliers?is_active=true",
              "host": ["{{baseUrl}}"],
              "path": ["suppliers"],
              "query": [
                {
                  "key": "is_active",
                  "value": "true"
                }
              ]
            }
          }
        },
        {
          "name": "Get Suppliers by Type",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/suppliers?supplier_type=OFFICIAL",
              "host": ["{{baseUrl}}"],
              "path": ["suppliers"],
              "query": [
                {
                  "key": "supplier_type",
                  "value": "OFFICIAL"
                }
              ]
            }
          }
        }
      ]
    },
    {
